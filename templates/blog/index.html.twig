{% extends "base.html.twig" %}

{% block title %}Accueil | {{ parent() }}{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			{% for post in posts %}
				<div class="col s12 m4 l3">
					<div class="post-card">
						<h3><a href="{{ path('afficher_post', {'id': post.id}) }}">{{ post.title }}</a></h3>
						<span class="date">{{ post.publishedAt|date('d/m/Y') }}</span>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}