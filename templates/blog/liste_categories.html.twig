{% extends "base_admin.html.twig" %}


{% block content %}
	<div class="liste_posts">
		<div class="container">
			<div class="row">
				<div class="col s12">
					<a href="#" class="btn btn blue darken-4" style="float: right">Ajouter une catégorie</a>
					<h5>Catégories</h5>
					<table>
						<tr>
							<th>#</th>
							<th>Nom de la catégorie</th>
							<th>Actions</th>
						</tr>
						{% set i = 1 %}
						{% for category in categories %}
							<tr>
								<td>{{ i }}</td>
								<td>
									<a href="#" target="_blank">{{ category.name }}</a>
								</td>
								<td>
									<a href="#">
										<i class="material-icons blue-text">edit</i>
									</a>
									<a href="#">
										<i class="material-icons red-text">delete</i>
									</a>
								</td>
							</tr>
							{% set i = i+1 %}
						{% endfor %}
					</table>
				</div>
			</div>
		</div>
	{% endblock %}
